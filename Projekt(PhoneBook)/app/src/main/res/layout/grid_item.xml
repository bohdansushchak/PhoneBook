<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin = "5dp"
    android:background="#edf1ad">

    <ImageView
        android:background="@color/backgroundImage"
        android:id="@+id/iv_image_grid_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_grid_name"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_grid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/TextBlack"
        android:layout_below="@+id/iv_image_grid_item"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_grid_second_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/TextBlack"
        android:layout_below="@+id/tv_grid_name"
        android:layout_centerHorizontal="true" />


</RelativeLayout>